<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_weight=""
            android:layout_height="150dp"
            android:layout_rowSpan="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#CD3636"
            android:backgroundTint="#FFFFFF"
            app:cardBackgroundColor="#F33535" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="472dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:rowCount="2">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3">

                <Button
                    android:layout_width="@dimen/width"
                    android:text="C"
                    android:theme="@style/Theme.Material3.DayNight" />


                <Button
                    android:layout_width="@dimen/width"
                    android:text="1" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="2" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="±" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="3" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="4" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="√" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="5" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="6" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:rowCount="4">

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:text="1" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="2" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="3" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="4" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="5" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="6" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="7" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="8" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="9" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="0" />

                <Button
                    android:layout_width="@dimen/width2"
                    android:layout_height="35dp"
                    android:layout_columnSpan="2"
                    android:text="⌦" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4">

                <Button
                    android:layout_width="@dimen/width"
                    android:text="^" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="7" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="8" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="%" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="9" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="0" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="90dp"
                    android:layout_rowSpan="2"
                    android:text="+" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="(" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text=")" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="-" />

                <Button
                    android:layout_width="@dimen/width"
                    android:text="x" />
            </GridLayout>


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="5">

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="1" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="2" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="3" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="4" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="5" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="6" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="7" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="8" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="9" />

                <Button
                    android:layout_width="@dimen/width"
                    android:layout_height="35dp"
                    android:text="0" />

                <Button
                    android:layout_width="@dimen/width2"
                    android:layout_height="35dp"
                    android:layout_columnSpan="2"
                    android:text="⌦" />

                <Button
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="/" />

                <Button
                    android:layout_width="@dimen/width2"
                    android:layout_columnSpan="2"
                    android:text="=" />
            </GridLayout>
        </GridLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>